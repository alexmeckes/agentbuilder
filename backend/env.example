# Any-Agent Workflow Composer - Environment Configuration

# =============================================================================
# REQUIRED: AI Provider API Keys
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# MCP SERVER INTEGRATION
# =============================================================================
# Enable MCP server support for external integrations
ENABLE_MCP_SERVERS=false

# When enabled, allows connection to:
# - PostgreSQL databases
# - File system access
# - GitHub repositories
# - Slack workspaces
# - Custom MCP servers

# =============================================================================
# EXECUTION MODE
# =============================================================================
# Workflow execution mode
# true = Suggestion mode (AI helps build workflows, no actual execution)
# false = Real execution mode (runs actual any-agent workflows)
USE_MOCK_EXECUTION=false

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Server port (default: 8000)
PORT=8000

# Log level (debug, info, warning, error)
LOG_LEVEL=info

# =============================================================================
# FRONTEND INTEGRATION
# =============================================================================
# Backend URL for frontend connections
BACKEND_URL=http://localhost:8000

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# OPTIONAL: Advanced Configuration
# =============================================================================
# MCP server timeout (seconds)
MCP_SERVER_TIMEOUT=30

# Workflow execution timeout (seconds)
WORKFLOW_EXECUTION_TIMEOUT=300

# Maximum concurrent workflow executions
MAX_CONCURRENT_EXECUTIONS=5

# =============================================================================
# DEVELOPMENT OPTIONS
# =============================================================================
# Enable development features
DEV_MODE=false

# Enable detailed tracing
ENABLE_TRACING=true

# Enable cost tracking
ENABLE_COST_TRACKING=true

# Composio Integration (Optional)
# Get your API key from: https://app.composio.dev/settings
COMPOSIO_API_KEY=your_composio_api_key_here 